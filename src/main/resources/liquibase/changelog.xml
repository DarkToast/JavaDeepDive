<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="CURRENT_TIMESTAMP()" dbms="h2"/>
    <property name="now" value="now()" dbms="postgresql" />
    
    <changeSet id="1" author="ciwanzik">

        <createTable tableName="greetings" schemaName="public">
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>
            <column name="greeting" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback/>
    </changeSet>

    <changeSet id="2" author="ciwanzik">
        <addPrimaryKey columnNames="id" constraintName="greetings_pk" tableName="greetings" schemaName="public"/>
    </changeSet>

</databaseChangeLog>
